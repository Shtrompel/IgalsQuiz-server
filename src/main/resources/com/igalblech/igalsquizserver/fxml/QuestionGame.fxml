<StackPane fx:id="stackPaneQuestion" prefHeight="800.0" prefWidth="1200.0" styleClass="vbox" stylesheets="@question.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.igalblech.igalsquizserver.controllers.QuestionGameController">
   <children>
       <VBox fx:id="vbox2" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
           <Text fx:id="textQuestionTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="Title" textAlignment="CENTER">
               <VBox.margin>
                   <Insets top="5.0" />
               </VBox.margin>
               <font>
                   <Font size="30.0" />
               </font>
           </Text>
         <Text fx:id="textQuestionDescription" stroke="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Description" textAlignment="CENTER">
            <font>
               <Font size="20.0" />
            </font>
            <VBox.margin>
               <Insets left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
         </Text>
           <ImageView fx:id="imageQuestionImage" fitHeight="150.0" fitWidth="192.0" x="100.0" VBox.vgrow="NEVER">
               <viewport>
                   <Rectangle2D />
               </viewport>
               <rotationAxis>
                   <Point3D />
               </rotationAxis>
               <VBox.margin>
                   <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <Image url="@../../../../../../../../Pictures/1354825400-0313223-www.nevsepic.com.ua.jpg" />
           </ImageView>
       </VBox>
      <Text fx:id="textQuestionTime" strokeType="OUTSIDE" strokeWidth="0.0" text="Time Left" translateX="-300.0" translateY="-200.0">
